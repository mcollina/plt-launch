{
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "cors": {
      "origin": "https://platformatic.cloud",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "migrations"
  },
  "plugin": {
    "path": "plugin.js"
  },
  "types": {
    "autogenerate": true
  }
}
